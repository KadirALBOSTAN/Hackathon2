{% extends 'layout.html.twig' %}
{% block title %}Résultat du round{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="assets/css/roundresult.css">
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <p class=" numero text-right">Tour n° : {{ round }}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h1 class="text-center mb-5">Résultat du round</h1>
            </div>
        </div>


        <table class="table mb-5">
            <thead>
            <tr>
                <th>{{ player.name }}</th>
                <th>{{ cpu.name }}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td scope="row">{{ player.life }}</td>
                <td>{{ cpu.life }}</td>
            </tr>
            </tbody>
        </table>
            <button onclick="document.location.href='/choosehero'"
                    class="btn btn-default btn-lg btn-block">Round suivant
            </button>
        </div>
{% endblock %}