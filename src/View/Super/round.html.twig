{% extends 'layout.html.twig' %}
{% block title %}Jouez !{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="assets/css/round.css">
    <link href="https://fonts.googleapis.com/css?family=Bangers|Open+Sans" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="container-fluid background_round">
       <div class="row">
           <div class="col-2">
               <img src="{{ cpuHero.photo }}">
           </div>
           <div class="col-3">
               <div class="row bangers">{{ cpuHero.name }}</div>
               <div class="row"><p><span class="pv">PV </span><span class="bold"> {{ cpu.life }}</span></p></div>
           </div>
           <div class="col-7 right bangers">TOUR NÂ° {{ fight.round }}</div>
       </div>
        <div class="row joueur_fight">
            <div class="col-10">
                <div class="row">
                    <div class="col-3 bangers">{{ player.name }}</div>
                    <div class="col-9 right bangers">{{ playerHero.name }}</div>
                </div>
                <div class="row">
                    <div class="col-3"><button onclick="document.location.href='/roundresult'" class="btn btn-round">Suivant</button></div>
                    <div class="col-9 right"><p><span class="pv">PV </span><span class="bold"> {{ player.life }}</span></p></div>
                </div>
            </div>
            <div class="col-2">
                <img src="{{ playerHero.photo }}">
            </div>
        </div>
    </div>
{% endblock %}